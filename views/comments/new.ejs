<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center">add new comment to <%= myfeed.name %></h1>
    <div style="width: 25%; margin: 40px auto;">
    <form action="/myfeed/<%= myfeed._id %>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="comment[author]" placeholder="author">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block">Submit!</button>
          </div>
    </form>
    <a href="/myfeed"> Go Back </a>
<!--use the name field inside the route
to grab data from the request.body -->
  </div>
  </div>
</div>
<% include ../partials/footer %>
